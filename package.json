{
  "name": "owofy",
  "description": "Owofy some text!",
  "version": "2.0.0",
  "author": "Bauke <me@bauke.xyz>",
  "funding": "https://github.com/sponsors/Bauke",
  "repository": {
    "type": "git",
    "url": "https://github.com/Bauke/owofy"
  },
  "license": "MIT",
  "type": "module",
  "main": "build/source/index.js",
  "types": "build/source/index.d.ts",
  "files": [
    "build/source/",
    "package.json",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "test": "xo && c8 ava",
    "prepublishOnly": "rm -rf build/ && pnpm build && pnpm test"
  },
  "devDependencies": {
    "ava": "^4.1.0",
    "c8": "^7.11.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3",
    "xo": "^0.48.0"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "files": [
      "tests/**/*.test.ts"
    ],
    "nodeArguments": [
      "--no-warnings",
      "--loader=ts-node/esm"
    ]
  },

  "c8": {
    "100": true,
    "all": true,
    "include": [
      "source",
      "tests"
    ],
    "reportDir": "coverage",
    "reporter": [
      "text",
      "html"
    ]
  },
  "xo": {
    "prettier": true,
    "space": true
  }
}
